<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_title"
            android:textSize="24sp"
            android:textColor="@color/color_on_background" />

        <!-- Quick actions header -->
        <TextView
            android:id="@+id/text_quick_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/quick_actions"
            android:textSize="18sp"
            android:textColor="@color/color_on_background" />

        <!-- Row of three quick action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Quick action: log workout -->
            <LinearLayout
                android:id="@+id/qa_log_workout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/color_primary"
                    android:background="@drawable/quick_action_circle">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_trainings"
                        android:tint="@color/color_on_primary" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/qa_log_workout"
                    android:textSize="12sp"
                    android:textColor="@color/color_on_background"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Quick action: add exercise -->
            <LinearLayout
                android:id="@+id/qa_add_exercise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/color_secondary"
                    android:background="@drawable/quick_action_circle">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add"
                        android:tint="@color/color_on_primary" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/qa_add_exercise"
                    android:textSize="12sp"
                    android:textColor="@color/color_on_background"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Quick action: record weight -->
            <LinearLayout
                android:id="@+id/qa_record_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/color_tertiary"
                    android:background="@drawable/quick_action_circle">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_weight"
                        android:tint="@color/color_on_primary" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/qa_record_weight"
                    android:textSize="12sp"
                    android:textColor="@color/color_on_background"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_on_surface_variant" />

        <!-- Navigation items list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>